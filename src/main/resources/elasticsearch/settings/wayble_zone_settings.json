{
  "analysis": {
    "tokenizer": {
      "edge_ngram_tokenizer": {
        "type":        "edge_ngram",
        "min_gram":    2,
        "max_gram":    20,
        "token_chars": ["letter", "digit"]
      },
      "nori_tokenizer": {
        "type":            "nori_tokenizer",
        "decompound_mode": "mixed"
      }
    },
    "filter": {
      "edge_ngram_filter": {
        "type":     "edge_ngram",
        "min_gram": 2,
        "max_gram": 20
      }
    },
    "analyzer": {
      "korean_edge_ngram_analyzer": {
        "type":      "custom",
        "tokenizer": "nori_tokenizer",
        "filter":    ["lowercase", "edge_ngram_filter"]
      },
      "korean_search_analyzer": {
        "type":      "custom",
        "tokenizer": "nori_tokenizer",
        "filter":    ["lowercase"]
      }
    }
  }
}